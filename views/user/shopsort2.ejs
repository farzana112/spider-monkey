

<div class="shop-area shop-page-responsive pt-100 pb-100">
    <div class="container">
        <div class="row flex-row-reverse">
            <div class="col-lg-9">
                <div class="shop-topbar-wrapper mb-40">
                    <div class="shop-topbar-left">
                        <div class="showing-item">
                            
                        </div>
                    </div>
                  
                </div>
                <div class="shop-bottom-area">
                    <div class="tab-content">
                        <% if (filterProducts) { %>
                        <div id="shop-2" class="tab-pane active">
                            <% for (let i = 0; i < filterProducts.length; i++) { %>
                            <div class="shop-list-wrap mb-30" data-aos="fade-up" data-aos-delay="200">
                                <div class="row">
                                    <div class="col-lg-4 col-sm-5">
                                        <div class="product-list-img">
                                            <a href="/products/<%=filterProducts[i].id%>">
                                                <img src="\<%=filterProducts[i].images[0].path%>" alt="Product Style">
                                            </a>
                                            <div class="product-list-badge badge-right badge-pink">
                                                
                                            </div>
                                            
                                        </div>
                                    </div>
                                   
                                    <div class="col-lg-8 col-sm-7">
                                        <div class="shop-list-content">
                                            <h3><a href="/products/<%=filterProducts[i].id%>"><%= filterProducts[i].itemName%></a></h3>
                                            <div class="product-price">
                                                
                                                <span class="new-price">â‚¹ <%=filterProducts[i].price%></span>
                                            </div>
                                            <p><%=filterProducts[i].description%>.</p>
                                            <div class="product-list-action">
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                          
                            <%} %>
                           
                        </div>
                        <% } else { %>
                       
                      <strong>  <h4>No filterProducts to match your query  !!</h4></strong>
                        
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="sidebar-wrapper">
                    <div class="sidebar-widget mb-40" data-aos="fade-up" data-aos-delay="200">
                        <!-- <div class="search-wrap-2">
                            <form class="search-2-form" action="#">
                                <input placeholder="Search*" type="text">
                                <button class="button-search"><i class=" ti-search "></i></button>
                            </form>
                        </div> -->
                    </div>
                    <div class="sidebar-widget sidebar-widget-border mb-40 pb-35" data-aos="fade-up" data-aos-delay="200">
                        <div class="sidebar-widget-title mb-30">
                            <h3>Filter By Price</h3>
                        </div>
                        <div class="price-filter">
                            <div id="slider-range"></div>
                            <div class="price-slider-amount">
                                <div class="label-input">
                                    <label>Price:</label>
                                    <input type="text" id="amount" name="price" placeholder="Add Your Price" />
                                </div>
                                <button type="button">Filter</button>
                            </div>
                        </div>
                    </div>
                    <div class="sidebar-widget sidebar-widget-border mb-40 pb-35" data-aos="fade-up" data-aos-delay="200">
                        <div class="sidebar-widget-title mb-25">
                            <h3>Product Categories</h3>
                        </div>
                        <div class="sidebar-list-style">
                            <ul>   <form action="/category" method="POST">
  
                              <div>
                                  <% for (var i = 0; i < filterParentData.length; i++) { %>
                                    <li>
                                      <button style="background-color: rgba(249, 105, 8, 0.772); color: white; border:none;" type="submit" name="category" value="<%= filterParentData[i].category %>">
                                        <%= filterParentData[i].category %>
                                        <span></span>
                                      </button>
                                    </li>
                                  <% } %>
                                </div>
                                
  
                                
                              </form>
                            </ul>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>

