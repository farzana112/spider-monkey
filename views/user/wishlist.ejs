<main class="main">
    <section class="mt-50 mb-50">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="table-responsive">
              <% if(!wishlistItems){%>
              <div class="d-flex justify-content-center">
                <!-- <img src="/assets/imgs/banners/no-wishlist" alt="" /> -->
                <h4>   No Items In The WishList !</h4>

              </div>
              <%} else{%>
              <table class="table shopping-summery text-center">
                <thead>
                  <tr class="main-heading">
                    <th scope="col" colspan="2">Product</th>
                    <th scope="col">Price</th>
                    <th scope="col">Action</th>
                    <th scope="col">Remove</th>
                  </tr>
                </thead>
                <tbody>
                  <% wishlistItems.forEach(function(wishlistItems){%>
                  <tr>
                    <td class="image product-thumbnail">
                      <img style="height:50px;width:50px"
                        src="/<%=wishlistItems.wishlist.images[0].path %>"
                        alt="#"
                      />
                    </td>
                    <td class="product-des product-name">
                      <h5 class="product-name" style="font-size: small;font-weight: 700;">
                        <a href="/products/<%=wishlistItems.wishlist.id%>">
                          <%=wishlistItems.wishlist.itemName%>
                        </a>
                      </h5>
                    </td>
                    <td class="price" data-title="Price">
                      <!-- <span> <%=wishlistItems.wishlist.price%> </span> -->
                      <span style="font-weight: 700;"> â‚¹ <%=wishlistItems.wishlist.price.toLocaleString('en-IN')%> </span>

                    </td>
                    <!-- <td class="text-right" data-title="Cart">
                      
                        <i class="fi-rs-shopping-bag mr-5" ></i> <a href="/products/addtocart/<%=wishlistItems.wishlist.id%>"></a>
                        Add to cart
                     
                    </td> -->

                   <td>
                    
                    <div class=" btn-hover">
                      <button>  <a href="/products/<%=wishlistItems.wishlist.id%>" >Add to cart</a></button>
            
                    </div>
                   </td>
                    <!-- <td class="action" cartItemss-title="Remove">
                     <button
                        class="text-muted"
                        
                      >
                         <i class="ti-trash"></i> <a href="/remove/<%=wishlistItems.wishlist.id%>"></a> -->
                      <!-- </button>  --> 
                      <td class="product-remove"><a href="/remove/<%=wishlistItems.wishlist.id%>"><i class=" ti-trash "></i></a></td>

                    <!-- </td> -->
                  </tr>
                  <%}) %>
                </tbody>
                <%} %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
 